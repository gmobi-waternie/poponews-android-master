
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
    	android:layout_height="120dp" 
    	android:orientation="vertical"
	    >

	<LinearLayout
			android:layout_width="match_parent"
	    	android:layout_height="0dp"
	    	android:layout_weight="1" 
	    	android:id="@+id/ll_type_image"
	    	android:orientation="horizontal"
		    >
		<CheckBox
		    android:layout_width="40dp"
		    android:layout_height="match_parent"
		    android:layout_gravity="center"
		    android:gravity="center"
		    android:id="@+id/fav_cb"
		    android:layout_marginLeft="10dp"
		   	style="@style/FavCheckboxTheme"/>
		    
	
	
		<LinearLayout
			android:layout_width="0dp"
			android:layout_weight="1"
	    	android:layout_height="120dp" 
	    	android:id="@+id/rl_type_image"
	    	android:orientation="vertical"
		    >
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/news_img_title"
		        android:paddingLeft="8dp"
		        />
		    
		    <LinearLayout
				android:layout_width="match_parent"
				android:paddingTop="8dp"
				android:paddingBottom="8dp"
				android:paddingRight="8dp"
		    	android:layout_height="0dp"
		    	android:layout_weight="1" 
		    	android:orientation="horizontal"
		    	>
		        	    
			    <ImageView 
					android:layout_width="0dp"
			    	android:layout_height="match_parent" 
			    	android:layout_weight="1"
			        android:scaleType="fitCenter"
			        android:id="@+id/news_img1"
			        
			        android:paddingLeft="8dp"
			        />
			    <ImageView 
			        android:layout_width="0dp"
			    	android:layout_height="match_parent" 
			    	android:layout_weight="1"
			        android:scaleType="fitCenter"
			        android:id="@+id/news_img2"
			        android:paddingLeft="8dp"
			        
			        />
			    <ImageView 
					android:layout_width="0dp"
			    	android:layout_height="match_parent" 
			    	android:layout_weight="1"
			        android:scaleType="fitCenter"
			        android:id="@+id/news_img3"
			        android:paddingLeft="8dp"
			        />
			    
			    
		        
		    </LinearLayout>
		</LinearLayout>
	</LinearLayout>

    <View
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:background="@color/list_divider_grey"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"
		/>
</LinearLayout>