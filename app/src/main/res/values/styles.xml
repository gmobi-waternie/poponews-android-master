<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="CtgCheckbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/ctg_checkbox_selectors</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:height">35dp</item>
    </style>

    <style name="OfflineCheckbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:drawableRight">@drawable/fav_checkbox_selectors</item>
        <item name="android:paddingLeft">20dp</item>
    </style>



    <style name="SocialCheckbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:drawableLeft">@drawable/fav_checkbox_selectors</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="TabTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/bg_white</item>
    </style>

    <style name="SettingTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/bg_white</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/bg_white</item>
    </style>


    <style name="NewsTitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/list_title_black</item>
    </style>

    <style name="NewsFeaturedStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/bg_white</item>
    </style>

    <style name="NewsSourceStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/list_source_grey</item>
    </style>

    <style name="NewsTimeStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/list_time_grey</item>
    </style>

    <style name="NewsTagStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/bg_red</item>
    </style>


    <style name="EmoNumStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/bg_black</item>
    </style>

    <style name="DialogTitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/bg_white</item>
    </style>

    <style name="DialogTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/bg_white</item>
    </style>

    <style name="UpdateTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/splash_update</item>
    </style>

    <style name="UpdateButtonStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/bg_white</item>
    </style>

    <style name="UpdateTitleStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/splash_update</item>
    </style>

    <style name="IndicatorStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/bg_white</item>
    </style>

    <style name="OfflineTitleStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?bgGreyColor</item>
    </style>

    <style name="OfflineTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?text_bg</item>
    </style>

    <style name="OfflineTextInvalidStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?bgGreyColor</item>
    </style>
    
    <style name="FeedbackTextStyle">
        <item name="android:textColor">?text_bg</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="FeedTextStyle">
        <item name="android:textColor">@color/bg_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MeMenuStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?text_bg</item>
    </style>

    <style name="MeMenuNightStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/bg_white_night</item>
    </style>


    <style name="PopoDialogStyle" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/window_box</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Widget"></style>

    <style name="Widget.ProgressBar">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">3500</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:maxWidth">48dip</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>

    <style name="Widget.ProgressBar.RegularProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progressbar</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:minHeight">3dip</item>
        <item name="android:maxHeight">10dip</item>
    </style>


    <style name="FavCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/fav_checkbox_selectors</item>
    </style>

    <style name="dialog_animstyle">
        <item name="android:windowEnterAnimation">@anim/dialogwindow_in_anim</item>
        <item name="android:windowExitAnimation">@anim/dialogwindow_out_anim</item>
    </style>

    <style name="SimpleActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/bg_red</item>
        <item name="android:height">42dp</item>
        <item name="android:displayOptions">showTitle|homeAsUp</item>
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
    </style>
    
        <style name="SimpleActionBarNight" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/bg_red_night</item>
        <item name="android:height">42dp</item>
        <item name="android:displayOptions">showTitle|homeAsUp</item>
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/bg_white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@drawable/press_red</item>
    </style>





    <style name="adRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">24dp</item>
    </style>

    <style name="NightTheme" parent="@style/AppTheme">
        <item name="view_bg">@color/bg_black</item>
        <item name="text_bg">@color/bg_white_night</item>
        <item name="listview_bg">@color/bg_black_night</item>
        <item name="red_bg">@color/bg_red_night</item>
        <item name="bgGreyColor">@color/bg_grey_night</item>
        <item name="bgWhiteColor">@color/bg_white_night</item>

    </style>

    <style name="DayTheme" parent="@style/AppTheme">
        <item name="view_bg">@color/bg_white</item>
        <item name="text_bg">@color/bg_black</item>
        <item name="listview_bg">@color/bg_white</item>
        <item name="red_bg">@color/bg_red</item>
        <item name="bgGreyColor">@color/bg_grey</item>
        <item name="bgWhiteColor">@color/bg_white</item>
    </style>


    <style name="Theme.AppStartLoadTranslucent" parent="@style/AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="Transparent" parent="@style/AppTheme">
        <item name="android:windowBackground">@color/bg_mask</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/My.Animation.Activity.Translucent.Style</item>
    </style>


    <style name="My.Animation.Activity.Translucent.Style" parent="@android:style/Animation.Translucent">
        <item name="android:activityOpenEnterAnimation">@anim/activity_new</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_finish</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_new</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_finish</item>

        <item name="android:taskOpenEnterAnimation">@anim/activity_new</item>
        <item name="android:taskOpenExitAnimation">@anim/activity_finish</item>
        <item name="android:taskCloseEnterAnimation">@anim/activity_new</item>
        <item name="android:taskCloseExitAnimation">@anim/activity_finish</item>

        <item name="android:windowEnterAnimation">@anim/activity_new</item>
        <item name="android:windowExitAnimation">@anim/activity_finish</item>
    </style>

    <style name="MyPopupWindow">
        <item name="android:windowEnterAnimation">@anim/dialogwindow_in_anim</item>
        <item name="android:windowExitAnimation">@anim/dialogwindow_out_anim</item>
    </style>

    <style name="MyPopupInterest">
        <item name="android:windowEnterAnimation">@anim/popup_in_anim</item>
        <item name="android:windowExitAnimation">@anim/popup_out_anim</item>
    </style>

</resources>

