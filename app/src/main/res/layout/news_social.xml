<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffffff"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_main_action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@color/bg_red">


        <TextView
            android:id="@+id/main_action_bar_title"
            style="@style/TitleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="8dp"
            android:text="@string/tabs_discovery"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl_fb"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:background="@color/bg_socialbar"
        android:divider="@null"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/facebook_login_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal|center_vertical"

            android:background="@color/bg_transparent"
            android:src="@drawable/facebook_2"/>

        <ImageButton
            android:id="@+id/twitter_login_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@color/bg_transparent"
            android:src="@drawable/twitter_2"/>


        <ImageButton
            android:id="@+id/google_login_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@color/bg_transparent"
            android:src="@drawable/google_2"/>

        <ImageButton
            android:id="@+id/weibo_login_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@color/bg_transparent"
            android:src="@drawable/weibo_2"/>

        <ImageButton
            android:id="@+id/baidu_login_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@color/bg_transparent"
            android:src="@drawable/baidu_2"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffffff">





            <ListView
                android:id="@+id/lv_sociallist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_white"
                android:divider="@null"
                />





    </RelativeLayout>
</LinearLayout>





   

