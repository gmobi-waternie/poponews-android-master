<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/gmobi_ad_container"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/bg_black"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:id="@+id/rl_type_pin_video"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@color/bg_black"
            android:orientation="horizontal"
            >

            <FrameLayout
                android:id="@+id/vpPlayer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                />

            <TextView
                android:id="@+id/btn_ad_video"
                style="@style/NewsSourceStyle"
                android:layout_width="28dp"
                android:layout_height="16dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/ad"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#ffffffff"
                android:orientation="horizontal"
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/news_title_video"
                    style="@style/NewsTitleStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"

                    />


            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_type_pin"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@color/bg_black"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/iv_ad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#ddffffff"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/news_title"
                    style="@style/NewsTitleStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    />

                <TextView
                    android:id="@+id/btn_ad"
                    style="@style/NewsSourceStyle"
                    android:layout_width="28dp"
                    android:layout_height="16dp"
                    android:layout_below="@id/rb_ad"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/ad"
                    />
            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/facebook_ad_container"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/bg_black"
        android:orientation="horizontal"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="2dp"
        android:background="@color/list_divider_grey"
        />
</LinearLayout>