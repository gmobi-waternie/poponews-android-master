<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/rl_type_ad"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gmobi_ad_container"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ll_ad_with_icon">

            <ImageView
                android:id="@+id/iv_ad_icon"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="11dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="11dp"
                android:scaleType="centerCrop"

                />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/news_title_icon"
                    style="@style/NewsTitleStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="7dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/app_name"


                    />

                <RatingBar
                    android:id="@+id/rb_ad"
                    style="@style/adRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/news_title_icon"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="14dp"


                    />
                <TextView
                    android:id="@+id/btn_ad_icon"
                    style="@style/NewsSourceStyle"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ad"
                    android:layout_centerVertical="true"
                    android:layout_below="@id/rb_ad"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="7dp"
                    android:layout_alignParentRight="true"
                    android:text="Install"/>

            </RelativeLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:id="@+id/ll_ad_with_video">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/news_title_video"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="20dp"
                    style="@style/NewsTitleStyle"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_gravity="center_vertical"
                    android:text="@string/app_name"
                    />

                <TextView
                    android:id="@+id/btn_ad_video"
                    style="@style/NewsSourceStyle"
                    android:layout_width="28dp"
                    android:layout_height="16dp"
                    android:background="@drawable/ad"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="2dp"
                    />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true"
                android:id="@+id/vpPlayer"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:id="@+id/ll_ad_with_image">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/news_title_image"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    style="@style/NewsTitleStyle"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_gravity="center_vertical"
                    android:text="@string/app_name"
                    />

                <TextView
                    android:id="@+id/btn_ad_image"
                    style="@style/NewsSourceStyle"
                    android:layout_width="28dp"
                    android:layout_height="16dp"
                    android:background="@drawable/ad"
                    android:layout_centerVertical="true"
                    android:layout_below="@id/rb_ad"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="2dp"
                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_ad_image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/facebook_ad_container"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/ad_unit"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/native_ad_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:id="@+id/btn_ad_image_facebook"
                    style="@style/NewsSourceStyle"
                    android:layout_width="28dp"
                    android:layout_height="16dp"
                    android:background="@drawable/ad"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="8dp"
                    />

            </LinearLayout>

            <com.facebook.ads.MediaView
                android:id="@+id/native_ad_media"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                />






        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="2dp"
        android:background="@color/list_divider_grey"
        />

</LinearLayout>