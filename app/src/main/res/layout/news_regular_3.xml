<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_type_regular_3"
    android:layout_width="match_parent"
    android:layout_height="191dp" >

    <LinearLayout
        android:id="@+id/ll_type_regular_3"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_type_regular_3_l"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/news_img_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:scaleType="fitCenter" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/news_title_1"
                    style="@style/NewsTitleStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:layout_centerInParent="true"
                    android:maxLines="3" />
            </RelativeLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fl_type_regular_3_l_ad"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/list_divider_grey" />

        <LinearLayout
            android:id="@+id/ll_type_regular_3_m"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/news_img_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:scaleType="fitCenter" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/news_title_2"
                    style="@style/NewsTitleStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_centerInParent="true"
                    android:ellipsize="end"
                    android:maxLines="3" />
            </RelativeLayout>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/fl_type_regular_3_m_ad"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <View
	        android:layout_width="1px"
	        android:layout_height="match_parent"
	        android:layout_marginBottom="8dp"
	        android:layout_marginTop="8dp"
	        android:background="@color/list_divider_grey" />

	    <LinearLayout
	        android:id="@+id/ll_type_regular_3_r"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:orientation="vertical" >
	
	        <ImageView
	            android:id="@+id/news_img_3"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="4dp"
	            android:layout_marginLeft="4dp"
	            android:layout_marginTop="4dp"
	            android:scaleType="fitCenter" />
	
	        <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1" >
	
	            <TextView
	                android:id="@+id/news_title_3"
	                style="@style/NewsTitleStyle"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="8dp"
	                android:layout_marginRight="8dp"
	                android:layout_marginTop="8dp"
	                android:layout_centerInParent="true"
	                android:ellipsize="end"
	                android:maxLines="3" />
	        </RelativeLayout>
	    </LinearLayout>
        <FrameLayout
            android:id="@+id/fl_type_regular_3_r_ad"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        
        
        
    </LinearLayout>




    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/ll_type_regular_3"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/list_divider_grey" >
    </View>

</RelativeLayout>