<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/rl_type_regular"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="81dp"
    android:orientation="horizontal"
    >

        <TextView
            android:id="@+id/news_title"
            style="@style/NewsTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="7dp"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="title"
            />

        <TextView
            android:id="@+id/news_source"
            style="@style/NewsSourceStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@id/news_title"
            android:layout_marginBottom="10dp"
            android:text="source"
            />


        <TextView
            android:id="@+id/news_comment_num"
            style="@style/NewsTimeStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="16dp"
            android:text="0"
            />

        <ImageView
            android:id="@+id/news_comment_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/news_comment_num"
            android:layout_alignTop="@id/news_comment_num"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/news_comment_num"
            android:src="@drawable/icon_comment"
            />

        <TextView
            android:id="@+id/news_fav_num"
            style="@style/NewsTimeStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="8dp"
            android:visibility="gone"
            android:text="0"
            />

        <ImageView
            android:id="@+id/news_fav_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/news_fav_num"
            android:layout_alignTop="@id/news_fav_num"
            android:visibility="gone"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@id/news_fav_num"
            android:src="@drawable/star_off"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/news_fav_star"
            android:layout_alignTop="@id/news_fav_star"
            android:layout_marginRight="4dp"
            android:visibility="gone"
            android:layout_toLeftOf="@id/news_fav_star"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/iv_news_emo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:src="@drawable/expression_happy_newslist"
                />

            <TextView
                android:id="@+id/tv_news_emo"
                style="@style/NewsTimeStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="83%"
                />

        </LinearLayout>




    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/list_divider_grey"
        />
</RelativeLayout>
