<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/panel_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_pinlist"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"

        android:id="@+id/rl_news_pin2"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box"
            android:orientation="vertical"
            >


            <ImageView
                android:id="@+id/news_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:adjustViewBounds = "true"
                android:maxHeight="99999dp"
                android:maxWidth="99999dp"

                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"


                />


            <TextView
                android:id="@+id/news_title"
                style="@style/NewsTitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:lineSpacingMultiplier="1.2"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/news_title"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/news_source"
                    style="@style/NewsSourceStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="BBC NEWS"
                    />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/news_fav_star"
                    android:layout_marginRight="4dp"
                    android:layout_toLeftOf="@id/news_fav_star"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/iv_news_emo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:src="@drawable/expression_happy_newslist"
                        />

                    <TextView
                        android:id="@+id/tv_news_emo"
                        style="@style/NewsTimeStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="83%"
                        />

                </LinearLayout>

                <ImageView
                    android:id="@+id/news_fav_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_toLeftOf="@id/news_fav_num"
                    android:src="@drawable/star_off"
                    />

                <TextView
                    android:id="@+id/news_fav_num"
                    style="@style/NewsTimeStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="1"
                    />


            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:id="@+id/rl_news_pin2_ad"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box"
            android:orientation="vertical"
            android:id="@+id/ll_news_pin2_ad"
            >


            <ImageView
                android:id="@+id/iv_ad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="8dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                />


            <TextView
                android:id="@+id/tv_ad"
                style="@style/NewsTitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:lineSpacingMultiplier="1.2"
                android:text="ad"
                />

                <TextView
                    android:id="@+id/btn_ad"
                    style="@style/NewsSourceStyle"
                    android:layout_width="28dp"
                    android:layout_height="16dp"
                    android:background="@drawable/ad"
                    android:layout_centerVertical="true"
                    android:layout_below="@id/rb_ad"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="10dp"
                    />




        </LinearLayout>
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@color/bg_pinlist"
        android:id="@+id/rl_news_pin2_ad_video"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box"
            android:orientation="vertical"
            android:id="@+id/ll_news_pin2_ad_video"
            >


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="8dp"
                android:adjustViewBounds="true"
                android:id="@+id/pin2_vpPlayer"
                />

            <TextView
                android:id="@+id/tv_ad_video"
                style="@style/NewsTitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:lineSpacingMultiplier="1.2"
                android:text="ad"
                />

            <TextView
                android:id="@+id/btn_ad_video"
                style="@style/NewsSourceStyle"
                android:layout_width="28dp"
                android:layout_height="16dp"
                android:background="@drawable/ad"
                android:layout_centerVertical="true"
                android:layout_below="@id/rb_ad"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp"
                />




        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@color/bg_pinlist"
        android:id="@+id/facebook_ad_container"
        android:orientation="horizontal"
        >


    </RelativeLayout>


</RelativeLayout>








