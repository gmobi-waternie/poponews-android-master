<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:descendantFocusability="blocksDescendants"
              android:orientation="vertical"

    >

    <LinearLayout
        android:id="@+id/outll_type_pin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"

        >

        <CheckBox
            android:id="@+id/fav_cb"
            style="@style/FavCheckboxTheme"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            />


        <LinearLayout android:id="@+id/ll_type_pin"
                      xmlns:android="http://schemas.android.com/apk/res/android"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:orientation="vertical"
            >

            <TextView
                android:id="@+id/news_title"
                style="@style/NewsTitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="TestTestTestTestTestTestTestTestTestTestTestTestTestTestTestTestTestTestTestTestTestTestTestTestTest"
                />

            <com.gmobi.poponews.widget.TopCropImageView
                android:id="@+id/news_img"
                android:layout_width="match_parent"
                android:layout_height="186dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/news_featured_nonpicture"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/news_source"
                    style="@style/NewsTimeStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="YahooNews"
                    />

                <TextView
                    android:id="@+id/news_date"
                    style="@style/NewsTimeStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:text="1天前"
                    />

                <!--<TextView-->
                <!--android:id="@+id/news_uninteresting"-->
                <!--style="@style/NewsTimeStyle"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_height="match_parent"-->
                <!--android:text="x"-->
                <!--android:layout_gravity="right|center_vertical"-->
                <!--android:gravity="right|center_vertical"-->
                <!--/>-->



            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/list_divider_grey"
        />

</LinearLayout>


