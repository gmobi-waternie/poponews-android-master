<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
	android:orientation="vertical">
	<View
		android:id="@+id/statusBarBackground"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>
    
    <RelativeLayout
        android:id="@+id/rl_mycomment_action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@color/bg_red" >

        <ImageButton
            android:id="@+id/mycomment_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:src="@drawable/navigaton_back" />

        <TextView
            android:id="@+id/mycomment_action_bar_title"
            style="@style/TitleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/mycomment_back"
            android:text="@string/label_menu_mycomment" />

    </RelativeLayout>
    
	<ListView
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" 
	    android:id="@+id/lv_mycomment_list"
        android:listSelector="@android:color/transparent"
	    />
</LinearLayout>
   

