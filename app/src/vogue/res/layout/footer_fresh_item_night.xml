<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
    	android:layout_height="81dp" 
    	android:id="@+id/rl_footer_fresh"
    	android:orientation="horizontal"
    	android:background="@color/bg_black_night"
	    >
    
     <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_centerVertical="true" >

         <ImageView
             android:id="@+id/iv_loading"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true" 
             android:background="@anim/loading_anim"/>

         <TextView
             android:id="@+id/tv_loading"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_marginLeft="5dp"
             android:layout_toRightOf="@id/iv_loading"
             android:text="@string/main_loading" 
             android:textColor="@color/bg_white_night"
             />
     </RelativeLayout>
</RelativeLayout>